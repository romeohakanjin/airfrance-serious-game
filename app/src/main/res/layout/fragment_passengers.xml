<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/flightLinearLayoutDeparture"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<android.support.constraint.ConstraintLayout
    android:id="@+id/linearLayoutDeparture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Liste des passagers"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />
</android.support.constraint.ConstraintLayout>

<TableLayout
    android:id="@+id/fragementPassengersTableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow>
        <TextView
            android:id="@+id/NumRefTextViewTitle"
            android:layout_width="87dp"
            android:text="Num Ref"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/LastNameTextViewTitle"
            android:layout_width="63dp"
            android:text="Nom"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/FirstNameTextViewTitle"
            android:layout_width="69dp"
            android:text="PrÃ©nom"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/MailTextViewTitle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:text="Mail"
            android:textAlignment="center" />
    </TableRow>
</TableLayout>

</LinearLayout>