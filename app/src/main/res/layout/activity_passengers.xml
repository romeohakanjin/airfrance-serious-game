                android:layout_width="87dp"
                android:text="Num Ref"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/LastNameTextViewTitle"
                android:layout_width="63dp"
                android:text="Nom"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/FirstNameTextViewTitle"
                android:layout_width="69dp"
                android:text="PrÃ©nom"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/MailTextViewTitle"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="Mail"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>

</LinearLayout>